<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Simon">

    <Style TargetType="Button" x:Key="StyledButtons">

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                        <Border CornerRadius="10" BorderBrush="#CC0F35E2" BorderThickness="2">
                        </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="Opacity" Value="0.8"/>
        <Setter Property="BorderBrush" Value="#CC000000" />
        <Setter Property="Background" Value="#88FF0000" />
        <Setter Property="BorderThickness" Value="3" />
    </Style>
</ResourceDictionary>
